@model BKStudent.Models.Student

@{
    ViewData["Title"] = "Create";
}

<h2 class="text-success" style="font-family : 'Times New Roman'">Tạo mới sinh viên</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Faculty" class="control-label"></label>
                <input asp-for="Faculty" class="form-control" />
                <span asp-validation-for="Faculty" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Birthday" class="control-label"></label>
                <input asp-for="Birthday" class="form-control" />
                <span asp-validation-for="Birthday" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CPA" class="control-label"></label>
                <input asp-for="CPA" class="form-control" />
                <span asp-validation-for="CPA" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Tạo mới sinh viên" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <form asp-action="Index">
        <input type ="submit" class="btn btn-default" value="Quay lại danh sách" asp-action="Index" />
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
